<!DOCTYPE html>
<html>
  <head>
    <title>PokeRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
  <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
  <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>

  <header class="navbar  navbar-inverse">
      <div class="navbar-class">
        <div class="container">

          <% if user_signed_in? %>
            <img src="/assets/pokeball.png" style="width:25px;height25px;">
            <%=link_to "Home", root_path %>
            <img src="/assets/moonball.png" style="width:25px;height25px;">
            <%= link_to "Pokedex", pokedex_path %>
            <img src="/assets/quickball.png" style="width:25px;height25px;">
            <%=link_to "All Trainers", users_path, id: "all-trainers" %>
            <img src="/assets/netball.gif" alt="pokeball" style="width:25px;height25px;">
            <%=link_to "Trainer's Page", user_path(current_user), method: :get %>
            <img src="/assets/timerball.png" alt="pokeball" style="width:25px;height25px;">
            <%=link_to "Challenge", new_match_path %>
            <img src="/assets/loveball.png" alt="pokeball" style="width:25px;height25px;">

            <%=link_to "Log Out", destroy_user_session_path, :method => "delete"%><br>
            <%= form_tag new_search_path, :method => 'get' do %>
              <p> <%= text_field_tag :type, params[:type] %>
                  <%= submit_tag "Search", :name => nil %></p>
            <% end %>
           <h1>Trainer: <%=current_user.name%></h1>

          <% else %>
            <img src="/assets/pokeball.png" alt="pokeball" style="width:25px;height25px;">
            <%=link_to "Home", root_path %>
            <img src="/assets/greatball.png" style="width:25px;height25px;">
            <%=link_to "Sign Up", new_user_registration_path%>
            <img src="/assets/ultraball.png" style="width:25px;height25px;">
            <%=link_to "Sign In", new_user_session_path %>
            <img src="/assets/masterball.png" alt="pokeball" style="width:25px;height25px;">
            <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
          <% end %>

        </div>
      </div>
    </header>

  <body>
    <%= yield %>
  </body>
</html>
