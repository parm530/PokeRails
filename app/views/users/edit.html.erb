<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <% num = rand(1..6) %>
      <img src="/assets/trainers/<%=num%>.png" style="width:300px;height:500px;">
    </div>

    
    <div class="col-lg-6">
      <% if current_user == @user %>
        <h1>Edit Trainer Info:</h1>

        <%= form_for current_user do |f| %>
          <p><%= f.label :name %>
          <%= f.text_field :name %></p>
          <p><%= f.label :age %>
          <%= f.number_field :age %></p>
          <p><%= f.label :hometown %>
          <%= f.text_field :hometown %></p>
          <%= f.submit class: "btn btn-primary"%>
        <% end %>
      <% else %>
        INVALID REQUEST
      <% end %>

    </div>

    <div class="col-lg-2">
      
    </div>

  </div>
</div>



