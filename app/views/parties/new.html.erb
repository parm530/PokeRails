<h1>New PKMN Team</h1>

<% if @party.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@party.errors.count, "error") %>
      prohibited this party from being saved:
    </h2>
 
    <ul>
    <% @party.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if current_user == @user %>

<%= render :partial => "form", locals: {party: @party} %>

<% end %>
