<%= form_for party do |f| %>

  <% if party.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(party.errors.count, "error") %>
        prohibited this party from being saved:
      </h2>
   
      <ul>
      <% party.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %>
    <h3><%= f.label :name_of_party %>:
    <%= f.text_field :name %></h3>
    <h4><%= f.collection_check_boxes :pokemon_ids, current_user.caught_pokemons, :id, :name  do |b| %></h4>
      <%= b.check_box %>
      <%= b.label do %>
        <%= b.object.name %>
      <% end %>
    <br />
    <% end %>
    <%= f.submit class: "btn btn-primary" %>
<% end %>


